<script type="text/javascript">
  $(function () {
    var extractToken = function(hash) {
      var match = hash.match(/access_token=([\w-]+)/);
      return !!match && match[1];
    };

    var getAccountData = function() {
      var deferred = $.Deferred();

      $.get('/api/v1').then(function(data){
        $.get(data.account.href).then(deferred.resolve);
      });

      return deferred.promise();
    }

    var OAUTH_ID = 'f75653a5a1c412645213836ea2ae1f2ff439b14be8b342a2a9f4b9de73c9704c';
    var OAUTH_CB_URL = 'http://localhost:3000/';

    var token = extractToken(document.location.hash);

    if (token) {
      $.ajaxSetup({
        headers: { 'Authorization': 'Bearer ' + token }
      });

      getAccountData().then(function(data){
        div = $('body').append("<div />")
        user = data.user

        Object.keys(user).forEach(function(key){
          var p = div.append('<p />');
          var value = user[key];
          p.append(key + ': ' + value);
        });
      });

    } else {
      var authUrl = '/oauth/authorize?response_type=token' +
        '&client_id='    + OAUTH_ID +
        '&redirect_uri=' + OAUTH_CB_URL;

      window.location = authUrl;
    }
  });
</script>
